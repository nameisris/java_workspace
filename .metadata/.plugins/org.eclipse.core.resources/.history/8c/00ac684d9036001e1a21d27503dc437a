
public class OperTest3 {

	public static void main(String[] args) {
		// 나머지 없이 정수만 출력
		System.out.println(10 / 4); // 2
		
		// 소수점 출력
		System.out.println(10.0 / 4); // 2.5
		
		int kor = 99, eng = 88, math = 100;
		int tot = kor + eng + math;
		double avg = tot / 3.0;
		System.out.println("총점: " + tot + "평균: " + avg); // 95.0

	}

}
